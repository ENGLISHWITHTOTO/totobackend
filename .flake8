[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
    E501,  # line too long (handled by black)
    C901,  # too complex
    W504,  # line break after binary operator
    E402,  # module level import not at top of file
exclude = 
    migrations/,
    venv/,
    env/,
    .venv/,
    __pycache__/,
    .git/,
    .tox/,
    .eggs/,
    *.egg/,
    build/,
    dist/,
    .pytest_cache/,
    .mypy_cache/,
    .coverage,
    htmlcov/,
    .nyc_output/,
    node_modules/,
    static/,
    media/,
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    */migrations/*:E501
max-complexity = 10
select = C,E,F,W,B,B950
