[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,C901,W504,E402
exclude = migrations/,venv/,env/,.venv/,__pycache__/,.git/,.tox/,.eggs/,*.egg/,build/,dist/,.pytest_cache/,.mypy_cache/,.coverage,htmlcov/,.nyc_output/,node_modules/,static/,media/
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    */migrations/*:E501
max-complexity = 10
select = C,E,F,W,B,B950
